#! /bin/sh

# Make sure remaking rules work when there is no subdir Makefile.

. $srcdir/defs || exit 1

cat > configure.in << 'END'
AC_INIT
AM_INIT_AUTOMAKE(nonesuch, nonesuch)
AC_OUTPUT(Makefile sub/foo)
END

: > Makefile.am

mkdir sub
: > sub/foo.in

$ACLOCAL || exit 1
$AUTOMAKE || exit 1

grep '^sub/foo' Makefile.in
