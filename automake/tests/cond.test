#! /bin/sh

# Check basic use of conditionals.

. $srcdir/defs || exit 1

cat > configure.in << 'END'
AC_INIT
AM_INIT_AUTOMAKE(nonesuch, nonesuch)
AM_CONDITIONAL(TEST, true)
AC_OUTPUT(Makefile)
END

cat > Makefile.am << 'END'
if TEST
VAR = true
else
VAR = false
endif
END

set -e
$ACLOCAL || exit 1
$AUTOMAKE

grep '^@TEST_TRUE@VAR = true$' Makefile.in
grep '^@TEST_FALSE@VAR = false$' Makefile.in

exit 0
