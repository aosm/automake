#! /bin/sh

# Test for bug where install-sh not included in distribution.

. $srcdir/defs || exit 1

cat > Makefile.am << 'END'
pkgdata_DATA =
magic:
	@echo $(DISTFILES)
END

$ACLOCAL || exit 1
$AUTOMAKE || exit 1

fgrep -v @SET_MAKE@ Makefile.in > Makefile.sed
$MAKE -s -f Makefile.sed SHELL=/bin/sh magic | grep install-sh
