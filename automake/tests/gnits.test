#! /bin/sh

# Test to ensure --gnits version checking is correct.

. $srcdir/defs || exit 1

cat > configure.in << 'END'
PACKAGE=nonesuch
VERSION=3.5.3.2
AC_OUTPUT(Makefile)
END

cat > Makefile.am << 'END'
pkgdata_DATA =
END

# Files required by Gnits.
: > INSTALL
: > NEWS
: > README
: > COPYING
: > AUTHORS
: > ChangeLog
: > THANKS

$ACLOCAL || exit 1
$AUTOMAKE --gnits && exit 1
exit 0
