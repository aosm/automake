#! /bin/sh

# Test for bug in variable substitution references when left hand pattern is
# null.
# Report from Richard Boulton

. $srcdir/defs || exit 1

cat > configure.in << 'END'
AC_INIT(hello.c)
AM_INIT_AUTOMAKE(hello,0.23)
AC_PROG_CC
AC_OUTPUT(Makefile)
END

cat > hello.c << 'END'
END

cat > Makefile.am << 'END'

var1 = dlmain

var2 = $(var1:=.)

helldl_SOURCES = $(var2:=c)

echorule:
	@echo $(helldl_SOURCES) $(helldl_OBJECTS)

bin_PROGRAMS = helldl
END

(gcc -v) > /dev/null 2>&1 || exit 77

# Ignore user CFLAGS.
CFLAGS=
export CFLAGS

set -e

$ACLOCAL
$AUTOCONF
$AUTOMAKE -a

CC='gcc' ./configure

val=`$MAKE -s echorule`;
echo $val
test "x$val" = "xdlmain.c dlmain.o"
