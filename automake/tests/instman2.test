#! /bin/sh

# Test to make sure mkinstalldirs invocation correct in install-man
# target.  Bug reported by Gordon Irlam <gordoni@cygnus.com>.

. $srcdir/defs || exit 1

cat > Makefile.am << 'EOF'
man8_MANS = frob.8
EOF

: > frob.8

$ACLOCAL || exit 1
$AUTOMAKE || exit 1

grep '^install-man' Makefile.in
