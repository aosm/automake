#! /bin/sh

# Make sure README-alpha is distributed when appropriate.  Report from
# Jim Meyering.
. $srcdir/defs || exit 1

cat > configure.in << 'END'
AC_INIT
AM_INIT_AUTOMAKE(zardoz, 1.5e)
AC_CONFIG_FILES(Makefile)
END

cat > Makefile.am << 'END'
AUTOMAKE_OPTIONS = gnits
END

: > README-alpha

# Gnits stuff.
: > INSTALL
: > NEWS
: > README
: > COPYING
: > AUTHORS
: > ChangeLog
: > THANKS

$ACLOCAL || exit 1
$AUTOMAKE || exit 1

grep README-alpha Makefile.in
