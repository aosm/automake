#! /bin/sh

# Test to make sure dependencies are generated correctly for .h files.
# Report from Richard Boulton.

. $srcdir/defs || exit 1

$needs_gnu_make

cat > configure.in << 'END'
AC_INIT
AM_INIT_AUTOMAKE(nonesuch, nonesuch)
AC_PROG_CC
AC_PROG_YACC
AC_OUTPUT(Makefile)
END

cat > Makefile.am << 'END'
bin_PROGRAMS = foo
foo_SOURCES = foo.y
AM_YFLAGS = -d
END

cat > foo.y << 'END'
%%
WORD: "up";
%%
END

set -e

$ACLOCAL
$AUTOMAKE -a
$AUTOCONF
./configure

$MAKE foo.h
test -f foo.h

# We should be able to recover if foo.h is deleted.

rm -f foo.h
$MAKE foo.h
test -f foo.h

# Make distclean must not erase foo.c nor foo.h (by GNU standards) ...
$MAKE foo.c
test -f foo.h
test -f foo.c
$MAKE distclean
test -f foo.h
test -f foo.c
# ... but maintainer-clean should.
./configure
$MAKE maintainer-clean
test ! -f foo.h
test ! -f foo.c
:
