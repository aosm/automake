#! /bin/sh

# Test to make sure that non-existing common files are distributed
# if they are buildable.

. $srcdir/defs || exit 1

cat > Makefile.am << 'END'
README:
	echo 'I bet you are reading me.' > README
END

$ACLOCAL || exit 1
$AUTOMAKE || exit 1

sed -n -e '/^DIST_COMMON =.*\\$/ {
   :loop
   p
   n
   /\\$/ b loop
   p
   n
   }' -e '/^DIST_COMMON =/ p' Makefile.in | grep README || exit 1
