#! /bin/sh

# Another `+=' test.  From Paul Berrevoets.

. $srcdir/defs || exit 1

cat > Makefile.am << 'END'
VAR = \
    one \
    two
VAR += three
END

$ACLOCAL || exit 1
$AUTOMAKE || exit 1

sed -n -e '/^VAR =.*\\$/ {
   :loop
    p
    n
    /\\$/ b loop
    p
    n
   }' Makefile.in | grep three
