#! /bin/sh

# Test to make sure [...] is ok in version number.  Report from Jim
# Meyering.

. $srcdir/defs || exit 1

cat > configure.in << 'END'
AC_INIT
AM_INIT_AUTOMAKE([sh-utils], [1.12o])
AC_OUTPUT(Makefile)
END

: > Makefile.am

# Files required by Gnits.
: > INSTALL
: > NEWS
: > README
: > COPYING
: > AUTHORS
: > ChangeLog
: > THANKS

$ACLOCAL || exit 1
$AUTOMAKE --gnits
